{
    "manifest_version": 3,
    "name": "Code Snippet Manager",
    "version": "1.0",
    "description": "Save, manage, and copy your code snippets locally in the browser.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "permissions": ["storage", "clipboardWrite"],
    "icons": {
      "128": "icon.png"
    }
  }
  